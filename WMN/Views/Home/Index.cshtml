@{
    Layout = "_LayoutLogin";
}

@using WMNDataAccess.Models
@model User

<div class="justify-content-around align-items-center d-flex min-vh-100">

    <div class="row card-body border rounded shadow-lg bg-white col-sm-8" id="login-container">

        <div class="col-md-4 d-block align-items-center align-self-center ms-auto me-auto">
            <img src="/files/yoda.jpg" class="card-img" />
        </div>

        <div class="col-md-6 mt-5 mb-5 ms-auto me-auto">

            <h2>Sign In</h2>
            <p>New User? <a asp-controller="Home" asp-action="CreateUser" class="text-decoration-none">Create Account</a></p>

            @*Apple Login*@
            <div class="d-grid gap-2">
                <button class="btn btn-dark btn-bl rounded-pill">
                    Continue with Apple
                    <img src="/files/appul - white.svg" class="mx-1 mb-1" style="width:15px" />
                </button>
            </div>

            @*Google Login*@
            <div class="d-grid gap-2 mt-2">
                <button class="btn btn-light border-dark rounded-pill">
                    Continue with Google
                    <img src="/files/Google_logo.svg" class="mx-1 mb-1" style="width:15px" />
                </button>
            </div>

            <hr />

            <form method="post">
                <div class="mb-3 mt-3">
                    <label asp-for="EmailID" class="form-label">Email Address</label>
                    <input asp-for="EmailID" class="form-control" placeholder="user@example.com">
                    <span asp-validation-for="EmailID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @*<div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Terms">
                <label class="form-check-label" for="Terms">Terms of Service</label>
                </div>*@

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>



